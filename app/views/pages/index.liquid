{% liquid
  graphql items = 'item/search'
   assign test = items
   
%}

<!-- list of items -->
<ul>
  {% for item in items.records.results %}

    {% assign id = item.id | plus: 0 %}
    {% if id < 7 %}


      <div class="grid-container">
        <li>{{ item.id }}
          {{ item.title }}
          <form action="/item/delete">
            <input
              class="grid-item"
              type="hidden"
              name="id"
              value={{item.id}}>
            <button class="grid-item" type="submit">Mark as done</button>
          </form>
          <form action="/item/update" method="post">

            <input
              class="grid-item"
              type="text"
              name="title">
            <input
              type="hidden"
              name="id"
              value={{item.id}}>
            <button class="grid-item" type="submit">update item</button>
          </form>


        </li>
      </div>
    {% endif %}
  {% endfor %}
</ul>

<!-- information shown when the list is empty -->
{% if items.records.total_entries == 0 %}
  <div>There are no items in the list.</div>
{% endif %}

<!-- form for adding new item -->
<form action="/item/create" method="post">

  <input type="text" name="title">
  <button type="submit">Add item</button>
</form>

