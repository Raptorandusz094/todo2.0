{% liquid
  graphql items = 'item/search'
%}

  <section id="hero">
  <!-- flex container -->


  <div class="container flex flex-col 
                                                                                                                                                                                                                                                                                                                reverse md:flex-row items-center px-6 mx-auto mt-10 space-y-0 md:space-y-0">
    <!-- Lefti Item-->
    <div class="flex flex-col md-32 space-y-12 md:w-1/2">
      <h1 class="max-w-md text-4xl font-bold text-center md:text-5xl md:text-left">

        Talald meg a kajat amit ma ennel, gyorsan
      </h1>
      <br>
      <br>
      <p1 class="max-w-sm text-center text-darkGraylishBlue md:textleft">
        Ehes vagy , es nem tudod mit ennel ,
        mi segitunk , hogy olcson megtalalad a neked valo kajat,
                                                                                                                                                                                                                                                                                                                                                                                                                  ez ennyire egyszeru
      </p1>

      <div class="flex justify-center md:justify-start">
        <a href="/search_bar" class="  md:block p-3 px-6 pt-2 text-white
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        bg-brightPurple rounded-full baseline hover:bg-brightPurpleLight">Find your faovorite food</a>
      </div>

    </div>

    <!-- right item what is Image -->
    <div class="md:w-1/2 ">
      <img src="https://cdn.britannica.com/36/123536-050-95CB0C6E/Variety-fruits-vegetables.jpg" alt="">
    </div>
  </div>


  <div class="container flex flex-col 
                                                                                                                                                                                                                                                                                                          reverse md:flex-row items-center px-6 mx-auto mt-10 space-y-0 md:space-y-0">
    <!-- Lefti Item-->
    <div class="flex flex-col md-32 space-y-12 md:w-1/2">



      <br>
      <section id="hero2">
        <!-- flex container -->


        <div class="container flex flex-col 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              reverse md:flex-row items-center px-6 mx-auto mt-10 space-y-0 md:space-y-0">
          <!-- Lefti Item-->
          <div class="flex flex-col md-32 space-y-12 md:w-1/1">
            <div class="max-w-md text-2xl  text-center md:text-5xl md:text-left">

              <div class="bg-purple-800 p-8 rounded-lg max-w-md w-full mr-8">
                <form action="item/create.liquid" method="post">
                  <div class="mb-4">
                    <label class="block text-white mb-2 text-2xl" for="title">Title:</label>
                    <input
                      type="text"
                      id="title"
                      name="title"
                      placeholder="Enter title"
                      class="w-full  h-10 p-2 bg-gray-200 rounded">
                  </div>
                  <div class="mb-4">
                    <label class="block text-white mb-2 text-2xl" for="ingredients">Ingredients:</label>
                    <input
                      type="text"
                      id="ingredients"
                      name="ingredient"
                      placeholder="Enter ingredients"
                      class="w-full h-10 p-2 bg-gray-200 rounded">
                  </div>
                  <div class="mb-4">
                    <label class="block text-white mb-2 text-2xl" for="title">Title:</label>
                    <input
                      type="text"
                      id="img_url"
                      name="img_url"
                      placeholder="Enter imgurl"
                      class="w-full  h-10 p-2 bg-gray-200 rounded">
                  </div>
                  <button class="  md:block p-3 px-6 pt-2 text-white
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      bg-brightPurple rounded-full baseline hover:bg-brightPurpleLight" type="submit">Add item</button>
                </form>
              </div>
            </div>

          </div>

        </div>

      </div>
    </div>

  </section>

  <div class="container mx-auto">
    <div class="flex flex-wrap -mx-4">

      {% for item in items.records.results %}

        {% assign itemId = item.id %}


        <div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4">
          <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <a href="#">
              <img
                class="rounded-t-lg"
                src="{{item.img_url}}"
                alt="" />
            </a>
            <div class="p-5">
              <a href="#">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ item.title }}</h5>
              </a>
              <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"></p>
              <form action="item/delete.liquid" method="post">
                <button type="submit">
                  <input
                    type="hidden"

                    name="itemid"
                    value="{{ item.id }}">
            
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Delete
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9" />
                  </svg>
                </button>
              </a>
            </form>
          </div>
        </div>
      </div>

    {% endfor %}

  </div>
</div>



<form action="/item/search_by_title" method="post">

  <div class="flex justify-center items-center h-screen">
    <div class="relative text-gray-600">
      <button
        href="/search_bar"
        class="  md:block p-3 px-6 pt-2 text-white
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  bg-brightPurple rounded-full baseline hover:bg-brightPurpleLight"
        type="submit">Search</button>


    </div>



  </form>



</div>