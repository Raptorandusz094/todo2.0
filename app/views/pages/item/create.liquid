{% liquid
	
    assign ingredientIds="[]"|parse_json
	assign ingredients= context.params.ingredient | split: ','

	
	
	
		
	

	
	
graphql result = 'item/create', title: context.params.title , ingredientID:"ingredientIDs", img:"img_url"
	
	if result.record.id
	redirect_to '/'
	
	
