---
method: post
---


{% liquid
	
	 
assign ingredients=context.params.ingredient|split: ','
 graphql result = 'item/create', title: context.params.title

	  assign itemIDK=result.record.id| append: '' 

	if result.record.id 
	for ingredient in ingredients
	
	graphql ingredientSave = 'item/ingredient/create', title: ingredient , itemID : itemIDK

	endfor
	
	graphql email = 'item/email/created', data: context.params
		redirect_to '/'

	endif
%}